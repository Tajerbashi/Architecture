@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid text-center">
    <div class="row d-flex flex-row justify-content-between" style="height:800px !important;">
        <div class="w-25" style="height:500px">
            <div class="bg-dark bg-gradient text-light rounded-3 shadow p-2 ">
                <h4 class="bg-light bg-gradient text-dark rounded-3 px-3">Product</h4>
                <div class="d-flex flex-column justify-content-around">
                    <a href="@Url.Action("GetAllTeachers","Home")" class="btn btn-primary text-light rounded-3 shadow mt-1">GetAll Teacher</a>
                    <a href="@Url.Action("GetTeacherById","Home")" class="btn btn-primary text-light rounded-3 shadow mt-1">Get Teacher By Id</a>
                    <div class="bg-warning bg-gradient text-dark rounded-2 shadow my-2">
                        <form asp-controller="Home" asp-action="CreateTeacher" method="post">
                            <input name="Name" type="text" class="form-control mt-1" placeholder="نام را وارد کنید ..."/>
                            <input name="Family" type="text" class="form-control mt-1" placeholder="فامیل را وارد کنید ..." />
                            <input name="Keys" type="text" class="form-control mt-1" placeholder="کلید ها را وارد کنید ..." />
                            <input name="submit" type="submit" class="btn btn-success my-1" value="ذخیره" />
                        </form>
                    </div>
                </div>

            </div>
        </div>
        <div class="w-25" style="height:500px">
            <div class="bg-dark bg-gradient text-light rounded-3 shadow p-2 ">
                <h4 class="bg-light bg-gradient text-dark rounded-3 px-3">User</h4>
            </div>
        </div>
        <div class="w-25" style="height:500px">
            <div class="bg-dark bg-gradient text-light rounded-3 shadow p-2 ">
                <h4 class="bg-light bg-gradient text-dark rounded-3 px-3">Teacher</h4>
            </div>
        </div>
        <div class="w-25" style="height:500px">
            <div class="bg-dark bg-gradient text-light rounded-3 shadow p-2 ">
                <h4 class="bg-light bg-gradient text-dark rounded-3 px-3">Null</h4>
            </div>
        </div>
    </div>
</div>


